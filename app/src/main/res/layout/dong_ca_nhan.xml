<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageviewbaihatcanhan"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:fontFamily="@font/roboto_mediumitalic"
        android:text="Têm bài hát"
        android:textSize="15sp"
        android:textColor="#363636"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/imageviewbaihatcanhan"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/textviewtenbaihatcanhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:fontFamily="@font/roboto_mediumitalic"
        android:textColor="#8c8a8a"
        android:textSize="15sp"
        android:text="Tên ca sĩ"
        android:singleLine="true"
        android:layout_toRightOf="@+id/imageviewbaihatcanhan"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textviewtenbaihatcanhan"
        android:id="@+id/textviewtencasibaihatcanhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:id="@+id/imageviewluotthichcanhan"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="25dp"
        android:layout_height="25dp"/>


</RelativeLayout>
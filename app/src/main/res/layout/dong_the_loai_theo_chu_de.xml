<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <FrameLayout
            android:id="@+id/framelayouttheloaitheochude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:id="@+id/imageviewtheloaitheochude"
                android:layout_width="170dp"
                android:layout_height="170dp"/>

        </FrameLayout>

        <TextView
            android:fontFamily="@font/roboto_mediumitalic"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="Nhạc Rap Việt Hot nhất 2020"
            android:maxWidth="200dp"
            android:lines="1"
            android:gravity="left"
            android:ellipsize="end"
            android:id="@+id/textviewtheloaitheochude"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/roboto_mediumitalic"
            android:text="Various Artists"
            android:textSize="13sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>